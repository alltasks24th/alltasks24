rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn(){ return request.auth != null; }
    function isAdmin(){
      return signedIn() && (
        get(/databases/$(database)/documents/roles/$(request.auth.uid)).data.role in ['owner','admin']
      );
    }

    match /settings/{doc} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /services/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /serviceAreas/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ✅ เพิ่มใหม่: areas (อ่านได้, เขียนเฉพาะแอดมิน)
    match /areas/{id} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    match /promotions/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /banners/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /faqs/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /reviews/{id} {
      allow read: if resource.data.approved == true || isAdmin();
      allow create: if signedIn();
      allow update, delete: if isAdmin();
    }

    match /bookings/{id} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /tickets/{id} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /chatThreads/{id} {
      allow create: if signedIn();
      allow read, update: if isAdmin() ||
                          (signedIn() && request.auth.uid == resource.data.uid);
    }

    match /chatThreads/{id}/messages/{msg} {
      allow create, read: if isAdmin() ||
                          (signedIn() && request.auth.uid ==
                            get(/databases/$(database)/documents/chatThreads/$(id)).data.uid);
    }

    match /roles/{uid} {
      allow read: if signedIn() && (request.auth.uid == uid || isAdmin());
      allow write: if isAdmin();
    }
  }
}

// ร้านค้า – products
match /products/{id} {
  // หน้าเว็บอ่านได้ (หรือจะจำกัดแค่ isActive ก็ได้ ดูหมายเหตุด้านล่าง)
  allow read: if true;

  // เขียนได้เฉพาะแอดมิน/โอ너ร์
  allow create, update, delete: if isAdmin();
}
