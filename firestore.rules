rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function roleOf(uid) { return get(/databases/$(database)/documents/users/$(uid)).data.role; }
    function isOwner()  { return isSignedIn() && roleOf(request.auth.uid) == 'owner'; }
    function isAdmin()  { return isSignedIn() && (roleOf(request.auth.uid) in ['admin','owner']); }

    match /users/{userId} {
      allow create: if isSignedIn() && request.auth.uid == userId && !exists(/databases/$(database)/documents/users/$(userId));
      allow read: if isAdmin();
      allow update, delete: if isOwner();
    }

    match /services/{doc}       { allow read: if true; allow write: if isAdmin(); }
    match /serviceAreas/{doc}   { allow read: if true; allow write: if isAdmin(); }
    match /banners/{doc}        { allow read: if true; allow write: if isAdmin(); }
    match /promotions/{doc}     { allow read: if true; allow write: if isAdmin(); }
    match /faqs/{doc}           { allow read: if true; allow write: if isAdmin(); }
    match /settings/{doc}       { allow read: if true; allow write: if isAdmin(); }

    match /bookings/{doc} { allow create: if true; allow read, update, delete: if isAdmin(); }
    match /tickets/{doc}  { allow create: if true; allow read, update, delete: if isAdmin(); }
    match /reviews/{doc}  { allow create: if true; allow read: if resource.data.approved == true || isAdmin(); allow update, delete: if isAdmin(); }

    // แชท: เจ้าของ thread อ่าน/เขียนได้, ผู้ดูแลอ่านทั้งหมดได้
    match /chatThreads/{threadId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin() || (isSignedIn() && resource.data.uid == request.auth.uid);
      match /messages/{msg} {
        allow create: if isSignedIn();
        allow read: if isAdmin() || (isSignedIn() && get(/databases/$(database)/documents/chatThreads/$(threadId)).data.uid == request.auth.uid);
      }
    }
  }
}
