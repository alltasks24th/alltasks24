rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() { return request.auth != null; }
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        (exists(/databases/$(database)/documents/settings/acl) &&
         request.auth.uid in get(/databases/$(database)/documents/settings/acl).data.admins)
      );
    }

    // อ่านได้ทุกคน
    match /banners/{id}         { allow read: if true; allow write: if isAdmin(); }
    match /promotions/{id}      { allow read: if true; allow write: if isAdmin(); }
    match /services/{id}        { allow read: if true; allow write: if isAdmin(); }
    match /serviceAreas/{id}    { allow read: if true; allow write: if isAdmin(); }
    match /faqs/{id}            { allow read: if true; allow write: if isAdmin(); }

    match /settings/{docId} {
      allow read: if docId == "public" || isAdmin();
      allow write: if isAdmin();
    }

    match /reviews/{id} {
      allow create: if true; // ใครก็ส่งได้
      allow read: if resource.data.approved == true || isAdmin();
      allow update, delete: if isAdmin();
    }

    match /bookings/{id} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    match /tickets/{id} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /chatThreads/{threadId} {
      allow create: if isSignedIn();
      allow read, update: if isAdmin() || (isSignedIn() && request.auth.uid == resource.data.uid);
      allow delete: if isAdmin();
      match /messages/{msgId} {
        allow read, create: if isAdmin() || (isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/chatThreads/$(threadId)).data.uid);
        allow update, delete: if isAdmin();
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
